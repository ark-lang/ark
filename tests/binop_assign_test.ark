[c] func printf(fmt: str, ...): int;

mut glob: int = 5;

func getGlob(): ^int {
	glob += 1;
	return &glob;
}

func main(): int {
	mut x := 0;
	x += 5;

	C::printf("x was `0`, became `%d`\n", x);
	if x != 5 {
		return 1;
	}

	x <<= 2;

	C::printf("x was `5`, became `%d`\n", x);
	if x != 20 {
		return 2;
	}

	^getGlob() += 0;

	C::printf("glob is `%d`\n", glob);
	if glob != 6 {
		return 3;
	}

	return 0;
}
