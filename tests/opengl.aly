struct SDL_Window {}
struct SDL_Renderer {}

u32 SDL_WINDOW_OPENGL = 2;

fn SDL_CreateWindow(title: str, x:int, y: int, w: int, h: int, flags: u32): mut ^SDL_Window;
fn SDL_CreateRenderer(window: mut ^SDL_Window, index: int, flags: u32): mut ^SDL_Renderer;

fn SDL_DestroyRenderer(renderer: mut ^SDL_Renderer);
fn SDL_DestroyWindow(window: mut ^SDL_Window);
fn SDL_Delay(ms:u32);
fn SDL_RenderClear(renderer: mut ^SDL_Renderer);
fn SDL_RenderPresent(renderer: mut ^SDL_Renderer);
fn SDL_Quit();

fn main(): int {
	mut ^SDL_Window window = SDL_CreateWindow("swag", 2000, 300, 640, 480, SDL_WINDOW_OPENGL);
	mut ^SDL_Renderer ren = SDL_CreateRenderer(window, -1, 2 | 4);

	SDL_Delay(3000);

	SDL_DestroyRenderer(ren);
	SDL_DestroyWindow(window);
	SDL_Quit();
	return 0;
}