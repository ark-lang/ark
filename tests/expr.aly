fn printf(fmt: str, _): int;

fn malloc(sz: usize): mut ^void;

fn free(x: mut ^void): mut void;

fn alloc_memory(sz: usize): mut ^void {
	mut ^void x = malloc(sz);
	if x {
		printf("Allocated %zu bytes of memory\n", sz);
		return x;
	}
	printf("Failed to allocate memory for %zu\n", sz);
	return false;
}
