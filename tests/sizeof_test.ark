[c] func printf(fmt: str, ...) -> int;

type Test struct {
    x: int,
    y: int,
    a: int,
    b: int
};

func main() -> int {
    i: int = 0;
    C::printf("sizeof i: %d\n", sizeof(i));
    C::printf("sizeof &i: %d\n", sizeof(&i));

    a: u8 = 0;
    C::printf("sizeof a: %d\n", sizeof(a));

    mut test: Test;
    C::printf("sizeof test: %d\n", sizeof(test));

    x: u8 = 0;
    if sizeof(x) != 1 {
        return 1;
    }

    y: s16 = 0;
    if sizeof(y) != 2 {
        return 2;
    }

    z: s64 = 0;
    if sizeof(z) != 8 {
        return 3;
    }

    return 0;
}
