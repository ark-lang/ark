// !use "std"

struct Block {

}

impl Block {

    static func new(size: usize): ^void? {
        data: ^void = malloc(size);
        if !data {
            println("failed to allocate {} bytes of memory", size);
            return None;
        }
        return Some(data);
    }

    static func delete(data: ^void): bool {
        result: int = free(data);
        if !result {
            println("failed to de-allocate memory");
            return false;
        }
        return true;
    }
}